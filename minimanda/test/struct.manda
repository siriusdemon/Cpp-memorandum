(defmacro ASSERT (actual expected)
  (assert actual expected (str expected)))

(defstruct My gender int age int)
(defstruct Man age int)

(defunion U1 
    gender int 
    X Man)

(defunion U2
    X int
    Y My)



(def main() -> int
    (ASSERT 42 42)
    (ASSERT 12 (do
                (let a :My) 
                (set a.gender 1)
                (set a.age 12)
                a.age))
    (ASSERT 1 (do
                (let a :Man)
                (set a.age 10)
                (defstruct Man gender int)
                (let b: Man)
                (set b.gender 1)
                b.gender))
    (ASSERT 10 (do
                (let a : U1)
                (set a.X.age 10)
                a.gender))
    (ASSERT 100 (do
                (let a : U2)
                (set a.X 100)
                a.Y.gender))
    (ASSERT 184 (do
                (defstruct Color R int G int B int)
                (let a : Color)
                (set a.R 100)
                (set a.B 42)
                (set a.G 42)
                (let b : Color a)
                (+ b.R b.G b.B)))
    (ASSERT 101 (do
                (defstruct S2 age int gender int)
                (defunion U2 X int Y S2)
                (let a :U2) 
                (set a.X 1)
                (set a.Y.gender 100)
                (let b :U2 a)
                (+ b.Y.age b.Y.gender)))
    (ASSERT 26 (do
                (defstruct S A int B int C int D int)
                (let S :S)
                (set S.A 10)
                (+ (sizeof S) S.A)))
    0
)